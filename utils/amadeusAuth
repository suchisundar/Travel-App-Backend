const axios = require("axios");

let amadeusToken = null;
let tokenExpiration = null;

async function authAmadeus() {
  const now = new Date();

  if (amadeusToken && tokenExpiration && now < tokenExpiration) {
    return amadeusToken; // Reuse token if valid
  }

  const response = await axios.post("https://test.api.amadeus.com/v1/security/oauth2/token", {
    grant_type: "client_credentials",
    client_id: process.env.AMADEUS_API_KEY,
    client_secret: process.env.AMADEUS_API_SECRET,
  });

  amadeusToken = response.data.access_token;
  tokenExpiration = new Date(now.getTime() + response.data.expires_in * 1000); // Token expiry
  return amadeusToken;
}

module.exports = { authAmadeus };
